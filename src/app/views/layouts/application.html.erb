<!DOCTYPE html> 
<html>
<head>
  <title>Easy Design | <%= @title  %></title>
  <%= stylesheet_link_tag "bootstrap.min", "shared" %>
  <%= javascript_include_tag "jquery-2.0.3.min", "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div id="header">
      <div class="navbar navbar-default">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Easy Design</a>
        </div>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <%
              case @title
                when 'Upload'
                  upload_class = 'active'
                when 'Home'
                else
                  discover_class = 'active'  
              end
            %>
            
            <li class="<%= discover_class %> "><%= link_to "Discover", '/discover' %></li>
            <li class="<%= upload_class %>"><%= link_to "Upload", '/upload' %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dave Hulme <i class="caret"></i></a>
              <ul class="dropdown-menu">
                <li><a href="#">Settings</a></li>
                <li class="divider"></li>
                <li><a href="#">Logout</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </div>
</body>
</html>
