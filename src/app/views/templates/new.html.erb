<% @title = 'Upload' %>
<h1>Upload</h1>
<% if @fail %>
  <h4 style="color: #a94442;">Your template failed to upload. Make sure you complete all fields.</h4>
<% end %>
<%= form_for :template, url: templates_path do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <%= f.submit 'Upload', class: 'btn btn-default' %>
<% end %>