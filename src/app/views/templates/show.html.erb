<%= stylesheet_link_tag 'show' %>
<%= javascript_include_tag 'show' %>
<script>
  var id = <%= @template.id %>;
  var numDownloads = <%= @template.downloads %>;
</script>

<div class="pull-left">
  <div>
    <h1><%= @template.title %></h1>
    <h4><%= @template.description %></h4>
    <p class="gray"><%= @category.name %><br>
    <span id="numDownloadsSpan"><%= @template.downloads_text %></span></p>
    <%= link_to('Download', @image_path, download: 'image.jpg', class: 'btn btn-default', id: 'downloadButton', remote: 'download') %>
  </div>
  
  <div id="reviewsSection">
    <h4>Reviews</h4>
    <button id="addReviewButton" class="btn btn-default">Add review</button>
    <div id="addReviewDiv" class="hidden">
      <div class="form-group stars">

      </div>
      <textarea class="form-group form-control" placeholder="Enter review here"></textarea>
      <button id="createReviewButton" class="btn btn-default">Add review</button>
    </div>
    
    <div id="reviews">
      <blockquote>
        <p>Hi there</p>
        <div>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
        </div>
        <small>Davey, at 12pm</small>
      </blockquote>
    </div>
  </div>
</div>

<div class="pull-right">
  <%= image_tag(@template.image_path,
    alt: @template.title, height: '300', id: 'previewImage') %>
</div>